# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       app.Search.index

# App
GET     /{controller}                           app.{controller}.index
GET     /{controller}/{action}                  app.{controller}.{action}
POST    /{controller}/{action}                  app.{controller}.{action}

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Internal

GET     /internal                               internal.QueryTracker.index
GET		/internal/{controller}					internal.{controller}.index
GET     /internal/{controller}/{action}         internal.{controller}.{action}
POST    /internal/{controller}/{action}         internal.{controller}.{action}

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin                                   module:crud
